<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>InvoiceServlet</servlet-name>
        <servlet-class>ro.uaic.feaa.psi.sgsm.model.servlet.InvoiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InvoiceServlet</servlet-name>
        <url-pattern>/api/vehicule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceServlet</servlet-name>
        <url-pattern>/api/invoices/save</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>InterfataFormFactura.html</welcome-file>
    </welcome-file-list>

</web-app>
